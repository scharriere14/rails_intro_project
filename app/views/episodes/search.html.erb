<h3>Search Results index page</h3>

<% @episodes = Episode.where("lower(title) LIKE :search", search: "%#{params[:search].downcase}%") %>
<% @characters = Character.where("lower(name) LIKE :search", search: "%#{params[:search].downcase}%") %>

<% if @episodes.present? || @characters.present? %>
  <h4>Episodes:</h4>
  <ul>
    <% @episodes.each do |episode| %>
    <li><%= link_to episode.title, episode, style: 'color: black;', class: 'has-text-black', onmouseover: "this.style.color='darkslategray'", onmouseout: "this.style.color='black'" %></li>
    <% end %>
  </ul>

  <h4>Characters:</h4>
  <ul>
    <% @characters.each do |character| %>
    <li><%= link_to character.name, character, style: 'color: black;', class: 'has-text-black', onmouseover: "this.style.color='darkslategray'", onmouseout: "this.style.color='black'" %></li>
    <% end %>
  </ul>
<% else %>
  <p>No results found</p>
<% end %>
